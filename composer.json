{
    "name": "stardots-io/stardots-sdk-php",
    "description": "PHP SDK for StarDots platform",
    "type": "library",
    "license": "MIT",
    "keywords": ["stardots", "sdk", "php", "file-storage"],
    "homepage": "https://stardots.io",
    "authors": [
        {
            "name": "StarDots Team",
            "email": "support@stardots.io"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0|^6.0|^7.0|^8.0|^9.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpmd/phpmd": "^2.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "StarDots\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "StarDots\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=PSR2 src/ tests/",
        "phpmd": "phpmd src/ text cleancode,codesize,controversial,design,naming,unusedcode",
        "phpstan": "phpstan analyse src/ --level=5"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 